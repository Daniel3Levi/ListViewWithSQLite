<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_shape">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp">

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true">


                <com.heliconbooks.mockuptellme.custom.CircleImageView
                    android:id="@+id/row_view_children_custom_img_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_default"
                    app:civ_border_color="@color/set_white"
                    app:civ_border_width="2dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/highlight_frame" />

            </FrameLayout>

        </RelativeLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/row_view_children_tv_record_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="wrap_content">


    </FrameLayout>

</RelativeLayout>